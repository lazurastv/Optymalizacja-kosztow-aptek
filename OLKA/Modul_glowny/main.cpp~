#include <iostream>
#include <fstream>
#include <stdexcept>

#define NO_INPUT 1

int printError(int error_number) {
	using namespace std;
	cout << "Blad " << error_number << ": ";
	switch (error_number) {
		case NO_INPUT:
			cout << "Brak pliku wejsciowego.";
			break;
		default:
			cout << "Niezdefiniowany problem.";
	}
	return error_number;
}

int main(int argc, char** argv) {
	std::string input_file;
	try {
		input_file = argv[1];
	}
	catch (std::out_of_range) {
		std::cerr << "No input file provided!\n";
	}
}
